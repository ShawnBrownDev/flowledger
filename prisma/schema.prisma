generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid()) @db.Uuid
  email        String     @unique
  passwordHash String     @map("password_hash")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  bills        Bill[]
  debts        Debt[]
  paychecks    Paycheck[]
  savings      Savings[]
  expenses     Expense[]

  @@map("users")
}

model Paycheck {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  payDate   DateTime @map("pay_date") @db.Date
  netAmount Decimal  @map("net_amount") @db.Decimal(12, 2)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, payDate])
}

model Debt {
  id                   String                @id @default(uuid()) @db.Uuid
  userId               String                @map("user_id") @db.Uuid
  name                 String
  apr                  Decimal               @db.Decimal(6, 4)
  balance              Decimal               @default(0) @db.Decimal(12, 2)
  minPayment           Decimal               @map("min_payment") @db.Decimal(12, 2)
  paymentFrequency     String                @map("payment_frequency")
  createdAt            DateTime              @default(now()) @map("created_at") @db.Timestamptz(6)
  bills                Bill[]
  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  debtMonthlySnapshots DebtMonthlySnapshot[]

  @@index([userId])
}

model Bill {
  id            String    @id @default(uuid()) @db.Uuid
  userId        String    @map("user_id") @db.Uuid
  name          String
  category      String
  dueDate       Int       @map("due_date")
  monthlyAmount Decimal   @map("monthly_amount") @db.Decimal(12, 2)
  paid          Boolean   @default(false)
  amountPaid    Decimal?  @map("amount_paid") @db.Decimal(12, 2)
  debtId        String?   @map("debt_id") @db.Uuid
  paidMonth     DateTime? @map("paid_month") @db.Date
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  debt          Debt?     @relation(fields: [debtId], references: [id])
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([debtId])
}

model DebtMonthlySnapshot {
  id              String   @id @default(uuid()) @db.Uuid
  debtId          String   @map("debt_id") @db.Uuid
  yearMonth       DateTime @map("year_month") @db.Date
  balanceBefore   Decimal  @map("balance_before") @db.Decimal(12, 2)
  interestApplied Decimal  @map("interest_applied") @db.Decimal(12, 2)
  paymentsApplied Decimal  @default(0) @map("payments_applied") @db.Decimal(12, 2)
  balanceAfter    Decimal  @map("balance_after") @db.Decimal(12, 2)
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  debt            Debt     @relation(fields: [debtId], references: [id], onDelete: Cascade)

  @@unique([debtId, yearMonth])
  @@index([debtId, yearMonth])
}

model Savings {
  id                  String   @id @default(uuid()) @db.Uuid
  userId              String   @map("user_id") @db.Uuid
  goalName            String   @map("goal_name")
  monthlyContribution Decimal  @default(0) @map("monthly_contribution") @db.Decimal(12, 2)
  balance             Decimal  @default(0) @db.Decimal(12, 2)
  targetAmount        Decimal? @map("target_amount") @db.Decimal(12, 2)
  createdAt           DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Expense {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  date        DateTime @db.Date
  amount      Decimal  @db.Decimal(12, 2)
  category    String
  description String?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, date])
  @@index([userId, category])
  @@map("Transaction")
}
